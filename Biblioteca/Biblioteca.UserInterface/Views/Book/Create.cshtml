@model Biblioteca.UserInterface.Models.Book

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>
                        
<h3 style="color:red">@ViewBag.Error</h3>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Book</legend>

        <div class="editor-label">
            @Html.Label("Title")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.title)
            @Html.ValidationMessageFor(model => model.title)
        </div>

        <div class="editor-label">
            @Html.Label("Publisher")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.publisher)
            @Html.ValidationMessageFor(model => model.publisher)
        </div>

        <div class="editor-label">
            @Html.Label("Author Name")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.authorName)
            @Html.ValidationMessageFor(model => model.authorName)
        </div>

        <div class="editor-label">
            @Html.Label("Author Last Name")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.authorLastName)
            @Html.ValidationMessageFor(model => model.authorLastName)
        </div>
        <div class="editor-label">
            @Html.Label("Genre")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.genre)
            @Html.ValidationMessageFor(model => model.genre)
        </div>
        <div class="editor-label">
            @Html.Label("Stock")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.stock)
            @Html.ValidationMessageFor(model => model.stock)

        </div>
        <br />
        <p>
            <input type="submit" class="btn btn-small btn-primary" value="Create" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
