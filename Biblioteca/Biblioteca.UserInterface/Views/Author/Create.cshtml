@model Biblioteca.UserInterface.Models.Author

@{
    ViewBag.Title = "Create";
}

@using (Html.BeginForm())
{ 
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Create new author</legend>
        <div class="editor-field">
            @Html.EditorFor(model => model.first_name, new {  @placeholder="First Name" })
            @Html.ValidationMessageFor(model => model.first_name)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.first_name, "First Name")
        </div>
        <div class="editor-label">
            @Html.EditorFor(model => model.last_name, new {placeholder="Last Name"})
            @Html.ValidationMessageFor(model => model.last_name)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.last_name, "Last Name")
        </div>
        <p>
            <input type="submit" id="crear" value="Create Author" />
        </p>

    </fieldset>
}